---

{# Hero Section #}
<section class="hero hero--home region region--lg" aria-labelledby="hero-heading">
  <div class="container">
    <div class="center center--intrinsic flow flow--xl text-center">
      <div class="hero-logo">
        <img src="/assets/logo.svg" alt="" class="hero-logo__image" aria-hidden="true">
      </div>

      <div class="flow flow--md">
        <p class="hero__eyebrow text-sm text-inverse text-uppercase">
          Global mix series · Live streams · Deep dives
        </p>

        <h1 id="hero-heading" class="hero__title">
          The Groove Library
        </h1>

        <p class="hero__tagline text-xl text-inverse mx-auto">
          A place to listen, move and discover – one mix at a time.
        </p>
      </div>

      <div class="hero__chips cluster cluster--md justify-center">
        <span class="hero-chip">
          <i class="fas fa-globe" aria-hidden="true"></i>
          Global sounds
        </span>
        <span class="hero-chip">
          <i class="fas fa-heart" aria-hidden="true"></i>
          Curated with care
        </span>
        <span class="hero-chip">
          <i class="fas fa-users" aria-hidden="true"></i>
          For everyone
        </span>
      </div>

      <div class="cluster cluster--md justify-center">
        <a href="#mixes-heading" class="button button--primary text-inverse">
          <i class="fas fa-play" aria-hidden="true"></i>
          Jump into the mixes
        </a>
        <a href="/easton-chop-up/" class="button button--secondary text-inverse">
          <i class="fas fa-record-vinyl" aria-hidden="true"></i>
          Visit Easton Chop Up
        </a>
      </div>
    </div>
  </div>
</section>


{# Description Section #}
{% if description %}
<section class="region region--lg" aria-labelledby="about-heading">
  <div class="container">
    <div class="wrapper wrapper--narrow flow">
      {{ description | safe }}
    </div>
  </div>
</section>
{% endif %}

{# Mix Collection Section #}
<section class="region region--xl" aria-labelledby="mixes-heading">
  <div class="container">
    <div class="flow flow--xl">
      {# Section Header #}
      <div class="flow flow--sm text-center">
        <h2 id="mixes-heading" class="text-3xl">
          Featured Mixes
        </h2>

        {% if theGrooveLibrary.count > 0 %}
          <div class="cluster cluster--sm justify-center">
            <span class="badge">
              <i class="fas fa-record-vinyl fa-sm" aria-hidden="true"></i>
              {{ theGrooveLibrary.count }} mixes in this playlist
            </span>
          </div>
        {% endif %}
      </div>

      {# Mix Grid #}
      {% if helpers.hasItems(theGrooveLibrary.cloudcasts) %}
        <div class="grid grid--2" role="list" aria-label="Music mixes">
          {% for mix in theGrooveLibrary.cloudcasts %}
            <div role="listitem">
              {% include "mix-player.njk" %}
            </div>
          {% endfor %}
        </div>
      {% elif theGrooveLibrary.error %}
        {# Error State #}
        <div class="error" role="alert">
          <h3 class="error__title">
            <i class="fas fa-triangle-exclamation" aria-hidden="true"></i>
            Unable to load mixes
          </h3>
          <p>We encountered an error while fetching the music collection. Please try again later.</p>
          <details class="my-md">
            <summary class="cursor-pointer text-semibold">Technical details</summary>
            <p class="text-sm my-sm"><code>{{ theGrooveLibrary.error }}</code></p>
          </details>
        </div>
      {% else %}
        {# Empty State #}
        <div class="center center--intrinsic flow flow--lg text-center py-3xl">
          <i class="fas fa-music-slash fa-4x text-tertiary" aria-hidden="true"></i>
          <div class="flow flow--sm">
            <h3 class="text-xl">No mixes available</h3>
            <p class="text-secondary">Check back soon for new content!</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{# About Section #}
<section class="region region--lg bg-secondary" aria-labelledby="about-heading">
  <div class="container">
    <div class="wrapper wrapper--narrow">
      <div class="flow flow--lg text-center">
        <h2 id="about-heading" class="text-2xl">
          Music Without Borders
        </h2>
        <p class="text-lg">
          The Groove Library brings you carefully curated musical journeys from diverse cultures and traditions.
          Each mix is a story, a rhythm, a celebration of the universal language of music.
        </p>
        <div class="cluster cluster--lg justify-center">
          <div class="flow flow--sm text-center">
            <i class="fas fa-globe fa-3x text-brand" aria-hidden="true"></i>
            <p class="text-semibold">Global Sounds</p>
          </div>
          <div class="flow flow--sm text-center">
            <i class="fas fa-heart fa-3x text-brand" aria-hidden="true"></i>
            <p class="text-semibold">Curated with Care</p>
          </div>
          <div class="flow flow--sm text-center">
            <i class="fas fa-users fa-3x text-brand" aria-hidden="true"></i>
            <p class="text-semibold">For Everyone</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
