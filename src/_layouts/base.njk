<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

<script id="Cookiebot" src="https://consent.cookiebot.com/uc.js" data-cbid="164833f4-c9d3-45d6-92ac-02eb5c88f4d3" type="text/javascript" async></script>
<script>
  // Debug Cookiebot loading
  window.addEventListener('load', function() {
    setTimeout(function() {
      if (typeof Cookiebot === 'undefined') {
        console.warn('Cookiebot not loaded after 3 seconds');
      } else {
        console.log('Cookiebot loaded successfully', {
          consent: Cookiebot.consent,
          consented: Cookiebot.consented,
          hasResponse: Cookiebot.hasResponse
        });
      }
    }, 3000);
  });
</script>

  {# SEO Meta Tags #}
  <title>{{ title }} | The Groove Library</title>
  <meta name="description" content="{{ description or 'A vibrant showcase of global music from Mixcloud - featuring legendary mixes from around the world.' }}">
  <link rel="canonical" href="https://thegroovelibrary.net{{ page.url }}">

  {# Open Graph / Social Media #}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }} | The Groove Library">
  <meta property="og:description" content="{{ description or 'A vibrant showcase of global music from Mixcloud' }}">
  <meta property="og:site_name" content="The Groove Library">
  <meta property="og:url" content="https://thegroovelibrary.net{{ page.url }}">
  <meta property="og:locale" content="en_US">
  <meta property="og:image" content="{{ ogImage or 'https://thegroovelibrary.net/assets/og-default.jpg' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="{{ title }} | The Groove Library - Global Music Discovery">

  {# Twitter Card #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }} | The Groove Library">
  <meta name="twitter:description" content="{{ description or 'A vibrant showcase of global music from Mixcloud' }}">
  <meta name="twitter:image" content="{{ ogImage or 'https://thegroovelibrary.net/assets/og-default.jpg' }}">
  <meta name="twitter:image:alt" content="{{ title }} | The Groove Library - Global Music Discovery">

  {# Theme Color #}
  <meta name="theme-color" content="#f9a837">

  {# Favicon #}
  <link rel="icon" type="image/svg+xml" href="/assets/logo.svg">

  {# Preconnect to external resources for performance #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://kit.fontawesome.com" crossorigin>
  <link rel="preconnect" href="https://ka-f.fontawesome.com" crossorigin>
  <link rel="preconnect" href="https://thumbnailer.mixcloud.com">
  <link rel="preconnect" href="https://www.mixcloud.com">
  <link rel="preconnect" href="https://player-widget.mixcloud.com">

  {# Google Fonts - non-render-blocking with preload + media swap #}
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Inter:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Inter:wght@300;400;500;600;700&display=swap"></noscript>

  {# Preload LCP image (hero logo) for faster paint #}
  <link rel="preload" href="/assets/logo.svg" as="image" type="image/svg+xml">

  {# Main Stylesheet - CUBE CSS Architecture #}
  <link rel="stylesheet" href="/css/main.css">

  {# Font Awesome Icons - Deferred for performance #}
  <script src="https://kit.fontawesome.com/40211c150e.js" crossorigin="anonymous" defer></script>

  {# Image Fallback Handler #}
  <script src="/js/image-fallback.js" defer></script>

  {# Lazy Player - Click-to-load iframes for performance #}
  <script src="/js/lazy-player.js" defer></script>

  {# Structured Data (Schema.org JSON-LD) #}
  {% if structuredData %}
    {{ structuredData | toJSONLD | safe }}
  {% endif %}
</head>
<body>
  {# Skip to main content link for keyboard navigation (WCAG 2.2) #}
  <a href="#main-content" class="skip-link">Skip to main content</a>

  {# Site Header #}
  <header class="site-header" role="banner">
    <div class="container">
      <div class="site-header__inner">
        <a href="/" class="site-logo" aria-label="The Groove Library - Home">
          <img src="/assets/logo.svg" alt="" class="site-logo__image" aria-hidden="true">
          <span class="site-logo__text">The Groove Library</span>
        </a>

        {# Mobile menu toggle #}
        <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true" tabindex="-1">
        <label for="nav-toggle" class="nav-toggle-label" aria-label="Toggle navigation menu">
          <span class="nav-toggle-icon"></span>
        </label>

        <nav class="nav" role="navigation" aria-label="Main navigation">
          <ul class="nav__list">
            {% for item in navigation.pages %}
              <li class="nav__item">
                <a href="{{ item.url }}"
                   class="nav__link {{ 'nav__link--active' if page.url == item.url }}"
                   {{ 'aria-current="page"' if page.url == item.url }}>
                  {{ item.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
  </header>

  {# Main Content Area #}
  <main id="main-content" role="main" tabindex="-1">
    {{ content | safe }}
  </main>

  {# Site Footer #}
  <footer class="site-footer" role="contentinfo">
    <div class="container">
      <div class="flow flow--lg">
        <div class="cluster cluster--lg">
          <div class="stack stack--md">
            <h2 class="text-xl">The Groove Library</h2>
            <p>Celebrating global music, one mix at a time.</p>
            <a href="https://www.instagram.com/the_groove_library/"
               target="_blank"
               rel="noopener noreferrer"
               class="footer-social"
               aria-label="Follow The Groove Library on Instagram (opens in new window)">
              <i class="fab fa-instagram" aria-hidden="true"></i>
              <span class="sr-only">Instagram</span>
            </a>
          </div>
        </div>

        <div class="flow flow--sm">
          <p class="text-sm">
            <small>
              Music sourced from
              <a href="https://www.mixcloud.com/legendarymusic/"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Legendary Music on Mixcloud (opens in new window)">
                Legendary Music on Mixcloud
                <i class="fas fa-arrow-up-right-from-square fa-xs" aria-hidden="true"></i>
              </a>
            </small>
          </p>
          <p class="text-sm">
            <small>
              &copy; {{ helpers.currentYear() }} The Groove Library.
              Built with <a href="https://www.11ty.dev/" target="_blank" rel="noopener noreferrer">Eleventy</a>,
              <a href="https://webawesome.com/" target="_blank" rel="noopener noreferrer">Web Awesome</a>,
              and <a href="https://cube.fyi/" target="_blank" rel="noopener noreferrer">CUBE CSS</a>.
            </small>
          </p>
        </div>
      </div>
    </div>
  </footer>

  {# Accessibility: Announce page changes to screen readers #}
  <div role="status" aria-live="polite" aria-atomic="true" class="sr-only"></div>

  {# Google Analytics - Deferred and Cookiebot-integrated for GDPR compliance #}
  <script>
    // Initialize dataLayer immediately for any early events
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}

    // Defer GA script loading until Cookiebot consent is given for statistics
    function loadGA() {
      var script = document.createElement('script');
      script.src = 'https://www.googletagmanager.com/gtag/js?id=G-HMK4ZC16H9';
      script.async = true;
      document.head.appendChild(script);
      gtag('js', new Date());
      gtag('config', 'G-HMK4ZC16H9', {
        'anonymize_ip': true
      });
    }

    // Cookiebot callback to load GA when consent is given for statistics
    window.CookiebotCallback = window.CookiebotCallback || {};
    window.CookiebotCallback_OnAccept = function() {
      if (Cookiebot.consent.statistics) {
        loadGA();
      }
    };

    // Also load GA if consent was already given (on subsequent page loads)
    if (typeof Cookiebot !== 'undefined' && Cookiebot.consent && Cookiebot.consent.statistics) {
      loadGA();
    } else if (document.readyState === 'complete') {
      // If Cookiebot isn't loaded yet but page is complete, wait for Cookiebot
      var checkCookiebot = setInterval(function() {
        if (typeof Cookiebot !== 'undefined') {
          clearInterval(checkCookiebot);
          if (Cookiebot.consent && Cookiebot.consent.statistics) {
            loadGA();
          }
        }
      }, 100);
    }
  </script>
</body>
</html>
